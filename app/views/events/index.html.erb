<div class="page-header">
  <h1>Events</h1>

</div>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Hashtag</th>
        <th>Photos</th>
        <th>Start At</th>
        <th>End At</th>
        <th></th>
      </tr>
    </thead>
    <% @events.each do |event| %>
      <tbody>
        <tr>
          <td><%= event.title %></td>
          <td>#<%= event.hashtag %></td>
          <td><%= event.photos_count %></td>
          <td><%= event.start_at %></td>
          <td><%= event.end_at %></td>
          <td>
            <%= link_to "Photos",
              event_path(event),
              class: "btn btn-block btn-lg btn-info pull-right"
            %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
<div class="row">
  <div class="col-md-2">
    <%= link_to "New Event",
      new_event_path,
      class: "btn btn-block btn-lg btn-primary"
    %>
  </div>
</div>
